#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	$(MAKE)

override_dh_auto_install:
	install -D -m 755 vorlangc $(DESTDIR)/usr/bin/vorlangc
	install -D -m 755 vorlangc $(DESTDIR)/usr/bin/vorlang
	mkdir -p $(DESTDIR)/usr/share/vorlang/stdlib
	cp -r stdlib/* $(DESTDIR)/usr/share/vorlang/stdlib/

override_dh_auto_clean:
	$(MAKE) clean || true
