import io
import core

program TestString
begin
    IO.println("Testing String module...")

    var s = "hello world"
    
    // Test string length using built-in
    var len = String.length(s)
    assert(len == 11, "length check")
    
    // Test string concatenation
    var greeting = "Hello" + " " + "World"
    var greetLen = String.length(greeting)
    assert(greetLen == 11, "concat length check")
    
    // Test string upper/lower
    var upper = String.upper("abc")
    assert(upper == "ABC", "upper check")
    
    var lower = String.lower("ABC")
    assert(lower == "abc", "lower check")
    
    IO.println("String module tests passed!")
end
