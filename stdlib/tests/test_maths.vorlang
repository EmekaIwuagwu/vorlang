import io
import core

program TestMaths
begin
    IO.println("Testing Maths module...")

    // Test basic math operations using built-in operators
    var absVal = 5.0
    if -5.0 < 0.0 then
        absVal = 0.0 - (-5.0)
    end if
    assert(absVal == 5.0, "abs check")
    
    // Min/max using conditionals
    var a = 10.0
    var b = 20.0
    var minVal = a
    if b < a then
        minVal = b
    end if
    assert(minVal == 10.0, "min check")
    
    var maxVal = a
    if b > a then
        maxVal = b
    end if
    assert(maxVal == 20.0, "max check")

    IO.println("Maths module tests passed!")
end
